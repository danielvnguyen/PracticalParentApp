<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bbp"

    tools:context=".UI.TaskEdit">

    <EditText
        android:id="@+id/editChildTask"
        android:layout_width="333dp"
        android:layout_height="76dp"
        android:ems="10"
        android:hint="@string/enter_task"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.538"
        tools:ignore="Autofill,TextContrastCheck" />

    <Button
        android:id="@+id/confirmTask"
        android:layout_width="190dp"
        android:layout_height="62dp"
        android:backgroundTint="#FFFFFF"
        android:text="@string/confirm_turn"
        app:cornerRadius="25dp"
        app:layout_constraintBottom_toTopOf="@+id/removeTask"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cancel"
        app:layout_constraintVertical_bias="1.0"
        app:strokeColor="#CFCACA"
        app:strokeWidth="4dp" />

    <Button
        android:id="@+id/removeTask"
        android:layout_width="190dp"
        android:layout_height="62dp"
        android:backgroundTint="#FFFFFF"
        android:text="@string/remove_task"
        app:cornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editChildTask"
        app:layout_constraintVertical_bias="0.883"
        app:strokeColor="#CFCACA"
        app:strokeWidth="4dp"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="190dp"
        android:layout_height="62dp"
        android:backgroundTint="#FFFFFF"
        android:text="@string/cancel"
        app:cornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editChildTask"
        app:layout_constraintVertical_bias="0.369"
        app:strokeColor="#CFCACA"
        app:strokeWidth="4dp" />

    <ImageView
        android:id="@+id/childImg"
        android:layout_width="210dp"
        android:layout_height="191dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.09"
        tools:ignore="ContentDescription,ImageContrastCheck"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/childName"
        android:layout_width="333dp"
        android:layout_height="wrap_content"
        android:text="@string/ntextview"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.426" />

    <Button
        android:id="@+id/historyBtn"
        android:layout_width="163dp"
        android:layout_height="56dp"
        android:text="History"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.659" />
</androidx.constraintlayout.widget.ConstraintLayout>

