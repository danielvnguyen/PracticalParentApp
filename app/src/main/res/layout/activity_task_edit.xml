<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b_w"
    tools:context=".UI.TaskEdit">

    <EditText
        android:id="@+id/editChildTask"
        android:layout_width="333dp"
        android:layout_height="76dp"
        android:ems="10"
        android:hint="@string/enter_task"
        android:inputType="text"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.538"
        tools:ignore="Autofill,TextContrastCheck" />

    <Button
        android:id="@+id/confirmTask"
        android:layout_width="190dp"
        android:layout_height="62dp"
        android:backgroundTint="#55AFF6"
        android:text="@string/confirm_turn"
        android:textColor="#000000"
        app:cornerRadius="25dp"
        app:layout_constraintBottom_toTopOf="@+id/removeTask"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cancel"
        app:layout_constraintVertical_bias="0.428"
        app:strokeColor="#2198CD"
        app:strokeWidth="4dp" />

    <Button
        android:id="@+id/removeTask"
        android:layout_width="190dp"
        android:layout_height="62dp"
        android:backgroundTint="#55AFF6"
        android:text="@string/remove_task"
        android:textColor="#000000"
        app:cornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editChildTask"
        app:layout_constraintVertical_bias="0.839"
        app:strokeColor="#2198CD"
        app:strokeWidth="4dp" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="190dp"
        android:layout_height="62dp"
        android:backgroundTint="#55AFF6"
        android:text="@string/cancel"
        android:textColor="#000000"
        app:cornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editChildTask"
        app:layout_constraintVertical_bias="0.164"
        app:strokeColor="#2198CD"
        app:strokeWidth="4dp"
        tools:ignore="TextContrastCheck" />

    <ImageView
        android:id="@+id/childImg"
        android:layout_width="216dp"
        android:layout_height="188dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.057"
        tools:ignore="ContentDescription,ImageContrastCheck"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/childName"
        android:layout_width="333dp"
        android:layout_height="wrap_content"
        android:text="@string/ntextview"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.426" />
</androidx.constraintlayout.widget.ConstraintLayout>