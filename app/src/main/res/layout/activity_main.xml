<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context=".UI.MainMenu"
    tools:layout_editor_absoluteX="10dp"
    tools:layout_editor_absoluteY="33dp">

    <ImageView
        android:id="@+id/addImg"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toEndOf="@+id/configureChildrenBtn"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_add"
        tools:ignore="ContentDescription,ImageContrastCheck" />

    <ImageView
        android:id="@+id/help_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toEndOf="@+id/help_screen_btn"
        app:layout_constraintTop_toBottomOf="@+id/task_img"
        app:srcCompat="@android:drawable/ic_menu_help"
        tools:ignore="ContentDescription,ImageContrastCheck" />

    <ImageView
        android:id="@+id/task_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toEndOf="@+id/configureTaskBtn"
        app:layout_constraintTop_toBottomOf="@+id/timeImg"
        app:srcCompat="@android:drawable/checkbox_on_background"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/flipImg"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/flipCoinBtn"
        app:layout_constraintTop_toBottomOf="@+id/addImg"
        app:srcCompat="@drawable/heads"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/timeImg"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/timeoutBtn"
        app:layout_constraintTop_toBottomOf="@+id/flipImg"
        app:srcCompat="@android:drawable/ic_lock_idle_alarm"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/help_screen_btn"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:backgroundTint="@color/white"
        android:text="@string/help_screen"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.17"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/configureTaskBtn"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/flipCoinBtn"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:backgroundTint="@color/white"
        android:text="@string/flip_coin_txt"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.17"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/configureChildrenBtn" />

    <Button
        android:id="@+id/timeoutBtn"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:backgroundTint="@color/white"
        android:text="@string/timeout_txt"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.17"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flipCoinBtn" />

    <Button
        android:id="@+id/configureTaskBtn"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:backgroundTint="#FBFBFB"
        android:text="@string/tasks"
        android:textColorHighlight="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.17"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeoutBtn" />

    <Button
        android:id="@+id/configureChildrenBtn"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/white"
        android:text="@string/configure_children_txt"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.17"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>