<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context=".UI.MainMenu"
    tools:layout_editor_absoluteX="10dp"
    tools:layout_editor_absoluteY="33dp">

    <ImageView
        android:id="@+id/addImg"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toTopOf="@+id/flipImg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toEndOf="@+id/configureChildrenBtn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.876"
        app:srcCompat="@android:drawable/ic_menu_add"
        tools:ignore="ContentDescription,ImageContrastCheck" />

    <ImageView
        android:id="@+id/help_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toEndOf="@+id/help_screen_btn"
        app:layout_constraintTop_toBottomOf="@+id/timeImg"
        app:srcCompat="@android:drawable/ic_menu_help"
        tools:ignore="ContentDescription,ImageContrastCheck" />

    <ImageView
        android:id="@+id/task_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toTopOf="@+id/help_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toEndOf="@+id/configureTaskBtn"
        app:layout_constraintTop_toBottomOf="@+id/timeImg"
        app:layout_constraintVertical_bias="0.45"
        app:srcCompat="@android:drawable/checkbox_on_background"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/flipImg"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toEndOf="@+id/flipCoinBtn"
        app:layout_constraintTop_toBottomOf="@+id/mainMenuTitle"
        app:layout_constraintVertical_bias="0.305"
        app:srcCompat="@drawable/heads"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/timeImg"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toEndOf="@+id/timeoutBtn"
        app:layout_constraintTop_toBottomOf="@+id/flipImg"
        app:layout_constraintVertical_bias="0.052"
        app:srcCompat="@android:drawable/ic_lock_idle_alarm"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/mainMenuTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:fontFamily="sans-serif"
        android:text="@string/practical_parent_app"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="44.38sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/help_screen_btn"
        android:layout_width="170dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/white"
        android:text="@string/help_screen"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.17"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/configureTaskBtn"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/configureChildrenBtn"
        android:layout_width="170dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/white"
        android:text="@string/configure_children_txt"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.17"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.233" />

    <Button
        android:id="@+id/flipCoinBtn"
        android:layout_width="170dp"
        android:layout_height="80dp"
        android:layout_marginBottom="276dp"
        android:backgroundTint="@color/white"
        android:text="@string/flip_coin_txt"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.17"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/configureChildrenBtn"
        app:layout_constraintVertical_bias="0.041" />

    <Button
        android:id="@+id/timeoutBtn"
        android:layout_width="170dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/white"
        android:text="@string/timeout_txt"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.17"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flipCoinBtn"
        app:layout_constraintVertical_bias="0.002" />

    <Button
        android:id="@+id/configureTaskBtn"
        android:layout_width="170dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#FBFBFB"
        android:text="@string/tasks"
        android:textColorHighlight="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.17"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeoutBtn"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>